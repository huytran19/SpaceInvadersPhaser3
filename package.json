{
  "name": "phaser3-parcel-template",
  "version": "1.0.0",
  "description": "A typescript template project for Phaser 3 using Parceljs",
  "scripts": {
    "start": "parcel src/index.html -p 8000",
    "build": "parcel build --no-minify src/index.html --out-dir dist",
    "deploy": "rm -rf dist && npm run build && gh-pages -d dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "supertommy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huytran19/SpaceInvadersPhaser3.git"
  },
  "homepage": "https://huytran19.github.io/SpaceInvadersPhaser3/",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "gh-pages": "^3.2.3",
    "minimist": ">=1.2.2",
    "parcel-plugin-clean-easy": "^1.0.2",
    "parcel-plugin-static-files-copy": "^2.4.3",
    "phaser": "^3.55.2",
    "typescript": "^3.8.3"
  },
  "parcelCleanPaths": [
    "dist"
  ],
  "staticFiles": {
    "staticPath": "public",
    "watcherGlob": "**"
  }
}
